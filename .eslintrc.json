{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-use-before-define": ["error", { "variables": false }],
    "no-console": "off",
    "func-names": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
